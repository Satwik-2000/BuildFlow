{
    "rewrites": [
        {
            "source": "/graphql",
            "destination": "/api/index"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ],
    "buildCommand": "npm run build --workspaces",
    "outputDirectory": "frontend/dist",
    "functions": {
        "api/**/*.ts": {
            "runtime": "nodejs18.x"
        }
    }
}