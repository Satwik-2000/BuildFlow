{
    "rewrites": [
        {
            "source": "/graphql",
            "destination": "/api/index.ts"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ],
    "framework": "vite",
    "buildCommand": "npm run build --workspaces"
}